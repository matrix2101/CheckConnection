                        android:background="@color/transparent"
                        android:src="@drawable/ic_clear"
                        app:layout_constraintBottom_toBottomOf="@+id/edtIP3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/edtIP3" />

                    <EditText
                        android:id="@+id/edtIP3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext1"
                        android:fontFamily="@font/iran_yekan_light"
                        android:hint="@string/ip"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/c303030"
                        app:layout_constraintEnd_toStartOf="@+id/btnClearIP3"
                        app:layout_constraintStart_toStartOf="@+id/guideline6"
                        app:layout_constraintTop_toBottomOf="@+id/txtIP3" />

                    <TextView
                        android:id="@+id/txtPort3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|end"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/iran_yekan_medium"
                        android:padding="8dp"
                        android:text="@string/port"
                        android:textColor="@color/c404040"
                        android:textSize="@dimen/fourthText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline6"
                        app:layout_constraintTop_toBottomOf="@+id/edtIP3" />

                    <EditText
                        android:id="@+id/edtPort3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/edittext1"
                        android:fontFamily="@font/iran_yekan_light"
                        android:hint="@string/defaultPort"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@color/c303030"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btnClearPort3"
                        app:layout_constraintStart_toStartOf="@+id/guideline6"
                        app:layout_constraintTop_toBottomOf="@+id/txtPort3" />

                    <ImageButton
                        android:id="@+id/btnClearPort3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_clear"
                        app:layout_constraintBottom_toBottomOf="@+id/edtPort3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtPort3" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chartIP3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtIP3" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.35" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--==========================================================-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/card1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

                    <TextView
                        android:id="@+id/txtDelay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|end"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/iran_yekan_medium"
                        android:padding="4dp"
                        android:text="@string/delay"
                        android:textColor="@color/c404040"
                        android:textSize="@dimen/fifthText"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edtDelay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/edittext1"
                        android:hint="1000"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@color/c505050"
                        app:layout_constraintBottom_toBottomOf="@+id/txtDelay"
                        app:layout_constraintEnd_toStartOf="@+id/txtDelay"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtDelay" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/startStopButtonHeight"
                android:src="@drawable/background_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/btnStartStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/button_stop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btnStartStopIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_start"
                app:layout_constraintBottom_toBottomOf="@+id/btnStartStop"
                app:layout_constraintEnd_toEndOf="@+id/btnStartStop"
                app:layout_constraintStart_toStartOf="@+id/btnStartStop"
                app:layout_constraintTop_toTopOf="@+id/btnStartStop" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>